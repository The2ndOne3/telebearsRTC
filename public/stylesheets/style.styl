body
  padding: 1.25em

a img
  float: left
  margin: 0 1.25em 1em 0

ul
  margin: 0
  font-size: 0.8em

li.listing
  a
    display: block
    background: #e9e9e9
    margin-bottom: 0.125em
    padding: 0.25em 1em
    color: #222

    span
      float: right

    &:hover
      background: #ccc

h3
  margin-bottom: 0.125em

.breadcrumbs
  background: none
  border: none
  float: left
  padding: 0

  &>*
    font-size: 0.75rem

    &:before
      content: ">"
      margin: 0 0.625em

.controls
  margin-bottom: 1.25rem

  a
    margin-bottom: 0

table
  width: 100%

  .filled, tr:nth-of-type(even).filled
    background: #f3d8d9

  tr:hover, tr:nth-of-type(even):hover
    background: #ddd

  tr.headings:hover
    background: inherit