extends layout

block content
  .row
    .large-12.columns
      p Listing of courses for the #{title} department:
  .row
    - var length = courses.length;
    - var half_length = Math.ceil(length/2);
    .large-6.columns
      ul.no-bullet
        - for (var i = 0; i < half_length; i++)
          li.listing
            a(href=encodeURIComponent(locals.id.toLowerCase()) + '/' + locals.courses[i].number.toLowerCase())
              strong.larger #{locals.id} #{locals.courses[i].number}
              .name #{locals.courses[i].title}
    .large-6.columns
      ul.no-bullet
        - for (var i = half_length; i < length; i++)
          li.listing
            a(href=encodeURIComponent(locals.id.toLowerCase()) + '/' + locals.courses[i].number.toLowerCase())
              strong.larger #{locals.id} #{locals.courses[i].number}
              .name #{locals.courses[i].title}
